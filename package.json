{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "fix-dashes",
  "title": "Fix Dashes",
  "description": "Convert em-dashes and en-dashes to regular hyphens",
  "icon": "command-icon.png",
  "author": "noam",
  "categories": [
   "Productivity"
   ],
  "license": "MIT",
  "commands": [
    {
      "name": "fix-selected-dashes",
      "title": "Fix Dashes in Selected Text",
      "description": "Replace em-dashes and en-dashes with regular hyphens",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "^18.8.3",
    "@types/react": "^18.0.9",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
